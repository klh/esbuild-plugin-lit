  "scripts": {
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zandaqo/esbuild-plugin-lit.git"
  },
  "keywords": [
    "esbuild",
    "plugin",
    "lit",
    "css",
    "svg",
    "asset",
    "tag",
    "literal",
    "template",
    "xlf"
  ],
  "files": [
    "*.js",
    "*.d.ts",
    "*.js.map"
  ],
  "author": "Maga D. Zandaqo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zandaqo/esbuild-plugin-lit/issues"
  },
  "homepage": "https://github.com/zandaqo/esbuild-plugin-lit#readme",
  "peerDependencies": {
    "esbuild": "^0.15.2",
    "html-minifier": "^4.0.0",
    "lit": "^2.3.0",
    "svgo": "^2.8.0",
    "txml": "^5.1.1"
  },
  "peerDependenciesMeta": {
    "svgo": {
      "optional": true
    },
    "lit": {
      "optional": true
    },
    "html-minifier": {
      "optional": true
    },
    "txml": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.2",
    "@types/svgo": "^2.6.3",
    "lit": "^2.3.0",
    "txml": "^5.1.1",
    "typescript": "^4.7.4"
  }
